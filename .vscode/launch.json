    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ensemble backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend",
                "FLASK_DEBUG": "1",
                "ENSEMBLE_DEBUG": "TRUE",
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true,
        },
        {
            "name": "Mock auth",
            "type": "python",
            "request": "launch",
            "module": "mock.auth",
            "justMyCode": true,
        },
    ]
}
